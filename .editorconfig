# .editorconfig
root = true

# Global settings for all file types
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript files
[*.ts]
indent_size = 2

# TypeScript React files
[*.tsx]
indent_size = 2

# JSON and config files
[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

# Markdown files â€“ trailing spaces may be intentional (e.g., for line breaks)
[*.md]
trim_trailing_whitespace = false
